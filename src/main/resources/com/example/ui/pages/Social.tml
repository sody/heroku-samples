<html t:type="layout"
	  xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
	  xmlns:p="tapestry:parameter">

<div class="row">
	<br/>

	<div class="btn-group">
		<t:facebookconnect t:id="facebook" class="btn">FACEBOOK</t:facebookconnect>
		<t:twitterconnect t:id="twitter" class="btn">TWITTER</t:twitterconnect>
		<t:googleconnect t:id="google" scope="https://www.googleapis.com/auth/userinfo.profile" class="btn">GOOGLE</t:googleconnect>
	</div>
	<br/>
	<br/>
</div>
<div class="row">
	<t:if test="socialProfile">
		<img src="${socialProfile.get('image')}" align="left" alt="picture"/>
		<table>
			<tbody>
			<tr>
				<th align="right">${message:label.id}:</th>
				<td width="5"/>
				<td><a href="${socialProfile.get('link')}">${socialProfile.get('id')}</a></td>
			</tr>
			<tr>
				<th align="right">${message:label.name}:</th>
				<td width="5"/>
				<td>${socialProfile.get('name')}</td>
			</tr>
			<tr>
				<th align="right">${message:label.gender}:</th>
				<td width="5"/>
				<td>${socialProfile.get('gender')}</td>
			</tr>
			<tr>
				<th align="right">${message:label.locale}:</th>
				<td width="5"/>
				<td>${socialProfile.get('locale')}</td>
			</tr>
			</tbody>
		</table>
		<p:else>
			${errorMessage}
		</p:else>
	</t:if>
</div>
</html>
